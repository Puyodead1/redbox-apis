model Transaction {
  transactionId         String   @id
  email                 String?
  kioskId               Int?
  transactionDate       String?
  customerProfileNumber String?
  items                 Json
  discounts             Json
  cardInformation       Json
}

model User {
  cpn           String   @id
  signupDate    String
  firstName     String?
  emailAddress  String?  @unique
  phoneNumber   String?  @unique
  password      String      // required, but temp one created upon signup at kiosk
  pin           String?
  hashed        Boolean
  loyalty       Json
  promoCodes    Json
  disabled      Boolean?
}

model Statistics {
  KioskId              Int     @unique
  Damaged              String?
  DumpBin              String?
  EmptySlots           String?
  InventoryData        String?
  ProfileData          String?
  RebalancesInKiosk    String?
  ThinDiscs            String?
  TotalDiscs           String?
  UnknownDiscs         String?
  UnknownTitle         String?
  UnmatchedInKiosk     String?
  WrongTitle           String?
  MinutesInMaintenance String?
  FraudCleanSync       String?
}

model PromoCode {
  id                Int      @id @default(autoincrement())
  code              String   @unique
  amount            Float
  promotionIntent   String
  rentQty           Int?
  rentFormat        String
  getQty            Int?
  getFormat         String
  campaignTitles    Json // array of DiscountValidationCampaignTitlesResult
  productTypeId     Int?
  formatIds         Json // int array
  actionType        String
  allowFullDiscount Boolean
  defaultPromo      Json? // DefaultPromo
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model DeviceCertificate {
  id            Int      @id @default(autoincrement())
  deviceId      String   @unique
  certificateId String
  devicePfx     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
